<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F0D2"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|normal"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textColor="#182881"
        android:text="Answer &amp; Question"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|normal"
        android:layout_marginTop="1dp"

        android:textSize="13sp"
        android:textAlignment="textStart"
        android:layout_marginStart="10dp"
        android:textColor="#656365"
        android:text="Ask yout any qustion for export
 and getSolution for problem"

        />



    <View
        android:layout_width="match_parent"
        android:background="#535151"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="9dp"
        android:layout_height="1dp"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"



        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRec"
            tools:listitem="@layout/item_profile"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />



    </LinearLayout>

</LinearLayout>